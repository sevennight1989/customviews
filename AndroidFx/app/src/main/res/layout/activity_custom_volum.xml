<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.com.android.custview.ui.CustomVolumActivity">

    <com.android.custview.view.CustomVolumControlBar
        android:id="@+id/cvCBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:bg="@mipmap/ic_launcher_round"
        app:circleWidth="10dp"
        app:dotCount="10"
        app:firstColor="@color/colorAccent"
        app:secondColor="@color/colorPrimary"
        app:splitSize="15" />

    <com.android.custview.view.CustomVolumControlBar
        android:id="@+id/cvCBar2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:bg="@mipmap/touxiang"
        app:circleWidth="10dp"
        app:dotCount="8"
        app:firstColor="@color/colorAccent"
        app:secondColor="@color/colorPrimary"
        app:splitSize="15"
        android:layout_below="@+id/cvCBar"
        android:layout_marginTop="10dp"/>

    <com.android.custview.view.CustomVolumControlBar
        android:id="@+id/cvCBar3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:bg="@mipmap/touxiang"
        app:circleWidth="10dp"
        app:dotCount="6"
        app:firstColor="@color/colorAccent"
        app:secondColor="@color/colorPrimary"
        app:splitSize="25"
        android:layout_below="@+id/cvCBar2"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
