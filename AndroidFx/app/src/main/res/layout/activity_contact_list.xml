<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ContactListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lvData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <com.android.custview.view.LetterView2
        android:id="@+id/letterView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:letterIndicatorColor="#999999"
        app:letterTextBackgroundColor="#ffffff"
        app:letterTextColor="#333333"
        app:letterTextSize="12sp" />

    <TextView
        android:id="@+id/tvLetterHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/drawable_letter_bg"
        android:gravity="center"
        android:textSize="20sp"
        tools:text="A"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>