<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.LearnActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.android.custview.learn.Learn01View
            android:id="@+id/view_01"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:visibility="gone" />

        <com.android.custview.learn.DashboardView
            android:id="@+id/view_02"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:visibility="gone" />

        <com.android.custview.learn.PieChat
            android:id="@+id/view_03"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:visibility="gone" />

        <com.android.custview.learn.AvatarView
            android:id="@+id/view_04"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:visibility="gone" />

        <com.android.custview.learn.SportsView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:visibility="gone"/>

        <com.android.custview.learn.ImageTextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="gone"/>

        <com.android.custview.learn.Learn02View
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="gone"/>

        <com.android.custview.learn.CameraView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="visible"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>